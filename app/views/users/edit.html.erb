<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>

      <%= form_with model: @user do |f| %>
              
      <% if @user.errors.any? %>
        <h3><%=@user.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <div class="form-group">
        <label for="inputName">Name</label>
        <div class="row">
          <div class="col">
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="inputImage">Image</label>
        <div class="row">
          <div class="col">
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <label for="inputIntroduction">Introduction</label>
        <div class="row">
          <div class="col">
            <%= f.text_area :introduction, class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
