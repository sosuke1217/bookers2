<div>
  <p><%= flash[:notice] %></p>
</div>

<div class="container px-5 px-sm-0">
  <div class="row"> 
    <div class="col-md-3">
      <%= render 'info', user: @user %>
      <%= render 'books/new_book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to image_tag(@user.get_profile_image(100, 100)), @user %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
          <% end %>
        </table>
    </div>
  </div>
</div> 
  